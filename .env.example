# Database Configuration
MONGODB_URI=mongodb://localhost:27017/securefile_storage
DB_NAME=securefile_storage

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_complex_at_least_32_characters

# File Encryption
ENCRYPTION_KEY=your_256_bit_hex_encryption_key_here_64_characters_long

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# File Upload Configuration
MAX_FILE_SIZE=104857600
UPLOAD_DIR=uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your_session_secret_here

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# API Keys (Optional)
GEOLOCATION_API_KEY=your_geolocation_api_key

# Security
BCRYPT_ROUNDS=12
LOGIN_ATTEMPTS_TO_BLOCK=5
ACCOUNT_LOCK_TIME_HOURS=2

# Audit Log Configuration
AUDIT_LOG_RETENTION_DAYS=90

# File Storage
TEMP_FILE_CLEANUP_INTERVAL_MS=300000
MAX_TEMP_FILE_AGE_MS=3600000
